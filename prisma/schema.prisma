// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum StoryStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

enum SectionType {
  WHAT_HAPPENED
  BACKGROUND
  RELATED
}

enum SourceType {
  EXTERNAL
  NUO
}

enum TargetType {
  STORY
  SOURCE
}

enum IngestionJobStatus {
  QUEUED
  FETCHING
  EXTRACTING
  GENERATING
  SAVED
  FAILED
}

// Models
model Story {
  id                     String        @id @default(cuid())
  slug                   String        @unique
  headline               String
  summary                String
  status                 StoryStatus   @default(DRAFT)
  heroImageUrl           String?
  heroImageAlt           String?
  heroImageSourceCredit  String?
  tags                   String[]
  publishedAt            DateTime?
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt
  
  // AI provenance
  promptVersion          String?
  modelName              String?
  generatedAt            DateTime?
  
  // Relations
  sections               Section[]
  storySources           StorySource[]
  ingestionJobs          IngestionJob[]
  
  @@index([status, publishedAt])
  @@index([publishedAt])
}

model Section {
  id         String          @id @default(cuid())
  storyId    String
  type       SectionType
  title      String?
  body       String
  order      Int
  
  // Relations
  story            Story            @relation(fields: [storyId], references: [id], onDelete: Cascade)
  sectionSources   SectionSource[]
  
  @@unique([storyId, order])
  @@index([storyId])
}

model Source {
  id             String     @id @default(cuid())
  url            String     @unique
  label          String
  domain         String
  type           SourceType
  publisherName  String?
  retrievedAt    DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  
  // Relations
  storySources     StorySource[]
  sectionSources   SectionSource[]
}

model StorySource {
  storyId   String
  sourceId  String
  
  // Relations
  story   Story   @relation(fields: [storyId], references: [id], onDelete: Cascade)
  source  Source  @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  
  @@id([storyId, sourceId])
  @@index([sourceId])
}

model SectionSource {
  sectionId  String
  sourceId   String
  
  // Relations
  section  Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  source   Source   @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  
  @@id([sectionId, sourceId])
  @@index([sourceId])
}

model SavedItem {
  userId      String
  targetType  TargetType
  targetId    String
  createdAt   DateTime    @default(now())
  
  @@id([userId, targetType, targetId])
  @@index([userId])
  @@index([targetType, targetId])
}

model IngestionJob {
  id           String               @id @default(cuid())
  url          String
  status       IngestionJobStatus   @default(QUEUED)
  errorMessage String?
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  
  // Optional metadata
  fetchedAt    DateTime?
  extractedAt  DateTime?
  generatedAt  DateTime?
  httpStatus   Int?
  contentType  String?
  
  // Raw HTML snapshot from fetching
  rawHtml      String?
  
  // Extracted content from HTML
  extractedTitle String?
  extractedText  String?
  
  // Reference to generated story
  storyId      String?
  story        Story?    @relation(fields: [storyId], references: [id])
  
  @@index([status])
  @@index([createdAt])
  @@index([storyId])
}

